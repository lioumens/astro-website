// import Footer from '../components/Footer.astro';
// import '../styles/global.css';
import SideNav from '../components/SideNav.astro';

// configures to recieve these as properties
const { pageTitle, activeNav } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <SideNav activeNav={activeNav}/>
    <main>
        <slot />
    </main>
  <script>
    // import '../scripts/menu.js'
    import '@fontsource-variable/space-grotesk';
  </script>
  </body>
</html>

<style lang="scss">
@import "../../node_modules/nord/src/sass/nord.scss";
    * {
        margin: 0;
        box-sizing: border-box;
    }

    html {
        height: 100%;
        // height: 100vh;
        min-width: 300px;
    }
    body {
        display: flex;
        font-family: 'Space Grotesk Variable', sans-serif;
        // font-weight: 500;
        font-variation-settings: "wdth" 90, "wght" 200;
        min-height: 100vh; // seems necessary when toggetling
    }

    main {
		padding: 5% 10%;
		// margin: -10px -10px;
		background-color: $nord1;
        min-height: 100vh;
        margin-left: 250px; // shift the size
        width:100%;
		color: $nord6;
    }
    @media screen and (max-width: 700px) {
        main {
            margin-top: 40px; // shift the size of fixed navigation
            margin-left: 0px; // shiftby size of navigation
        }
        // main.expanded {
        //     margin-top: 140px;
        // }
        body {
            flex-direction: column;
        }
    }
</style>
